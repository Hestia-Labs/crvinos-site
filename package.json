    "next": "14.1.0",
    "next-i18n-router": "^5.5.0",
    "next-intl": "^3.15.3",
    "next-video": "^1.1.1",
    "react": "^18",
    "react-dom": "^18",
    "react-i18next": "^14.1.2"
  },
  "devDependencies": {
    "@cloudflare/next-on-pages": "^1.12.0",
    "@cloudflare/workers-types": "^4.20240620.0",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "autoprefixer": "^10.0.1",
    "drizzle-kit": "^0.22.8",
    "eslint": "^8",
    "eslint-config-next": "14.1.0",
    "eslint-plugin-next-on-pages": "^1.12.0",
    "postcss": "^8",
